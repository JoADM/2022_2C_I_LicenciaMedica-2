@model IEnumerable<_2022_2C_I_LicenciaMedica.Models.Licencia>

@{
    ViewData["Title"] = "Mis Licencias";
}

<html>

<body>

    <div class="caja-transparente">

        <h1 class="mt-3 mb-3" id="h1">
            Mis Licencias
        </h1>

        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card" style="width: 20rem; margin: .25rem;">
                    <div class="card-body">
                        <h5 class="card-title">Licencia ID: @Html.DisplayFor(modelItem => item.LicenciaId)</h5>
                        <b class="card-text">Nombre medico: </b> @{
                            /*  @Html.DisplayFor(modelItem => item.nombreMedico) */
                        }   <br>
                        <b class="card-text">@Html.DisplayNameFor(model => model.Descripcion): </b>@Html.DisplayFor(modelItem => item.Descripcion)<br>
                        <b class="card-text">Fecha Inicio: </b>@item.FechaInicio.ToShortDateString()<br>
                        <b class="card-text">Fecha Fin: </b>@item.FechaFin.ToShortDateString()<br>
                        <b class="card-text">@Html.DisplayNameFor(model => model.Activa): </b>@Html.DisplayFor(modelItem => item.Activa)<br>
                    </div>
                </div>
            }
        }
        else
        {
            <div margin: auto>
                <h2>¡Acá aparecerán tus licencias cuando tengas alguna!</h2>
            </div>
        }
        <style>
            .card {
                display: inline-block;
            }

            b {
                font-size: medium;
            }
        </style>
    </div>
</body>
</html>