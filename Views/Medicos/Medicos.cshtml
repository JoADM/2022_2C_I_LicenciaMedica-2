@model IEnumerable<_2022_2C_I_LicenciaMedica.Models.Licencia>


<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>

<body>



    <div class="caja-transparente">

        <h1 class="mt-3 mb-3" id="h1">
            Hola @ViewBag.medicoName, estas son tus visitas:
        </h1>
        @{
            if (Model.Count() > 0)
            {
                var cont = 0;
                @foreach (var l in Model)
                {
                    <div class="card" style="width: 20rem; margin: .25rem;">
                        <div class="card-body">
                            <h5 class="card-title">Licencia ID: @Html.DisplayFor(modelItem =>  l.LicenciaId)</h5>
                            <b class="card-text">Nombre empleado: </b> @ViewBag.nombresEmpleados[cont] <br>
                            <b class="card-text">Fecha Inicio: </b> @l.FechaInicio.ToShortDateString() <br>
                            <b class="card-text">Fecha Fin: </b> @l.FechaFin.ToShortDateString() <br>
                            <b class="card-text">Activo: </b> @Html.DisplayFor(modelItem =>  l.Activa) <br>
                        </div>
                    </div>

                    cont++;
                }
            }
            else
            {
                <div margin: auto>
                    <h2>¡Acá aparecerán tus visitas cuando tengas alguna!</h2>
                </div>
            }

        }
        <style>
            .card {
                display: inline-block;
            }

            b {
                font-size: medium;
            }
        </style>
    </div>

</body>

</html>